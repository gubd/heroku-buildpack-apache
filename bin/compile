#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# config
APACHE_VERSION="2.4.4"
APR_VERSION="1.4.6"

BIN_DIR=$(dirname $0)
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

# include .files when moving things around
shopt -s dotglob

cd $BUILD_DIR

# move app things to www
mkdir -p $CACHE_DIR/www
mv * $CACHE_DIR/www
mv $CACHE_DIR/www .

# keep Procfile
if [ -f www/Procfile ]; then
  mv www/Procfile .
fi

APR_URL="http://apache.mirrors.pair.com//apr/apr-$APR_VERSION.tar.gz"
echo "-----> Downloading APR version $APR_VERSION source"
curl --location "$APR_URL" | tar xz
cd ./apr-$APR_VERSION

echo "-----> Building APR version $APR_VERSION"
./configure
make
make install

cd ..
APACHE_URL="http://apache.mirrors.pair.com//httpd/httpd-$APACHE_VERSION.tar.gz"
echo "-----> Downloading Apache version $APACHE_VERSION source"
curl --location "$APACHE_URL" | tar xz
cd ./httpd-$APACHE_VERSION

echo "-----> Building Apache version $APACHE_VERSION"
./configure
make
make install

cd ..
# update config files
#cp $LP_DIR/conf/httpd.conf $APACHE_PATH/conf
#cp $LP_DIR/conf/php.ini php

# make php available on bin
#mkdir -p bin
#ln -s /app/php/bin/php bin/php

cat >>boot.sh <<EOF
for var in \`env|cut -f1 -d=\`; do
  echo "PassEnv \$var" >> /app/apache/conf/httpd.conf;
done
touch /app/apache/logs/error_log
touch /app/apache/logs/access_log
tail -F /app/apache/logs/error_log &
tail -F /app/apache/logs/access_log &
export LD_LIBRARY_PATH=/app/php/ext
export PHP_INI_SCAN_DIR=/app/www
echo "Launching apache"
exec /app/apache/bin/httpd -DNO_DETACH
EOF

chmod +x boot.sh

# clean the cache
rm -rf $CACHE_DIR